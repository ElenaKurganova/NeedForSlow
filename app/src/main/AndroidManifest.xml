<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="megadroid.drivinggame">

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.MainActivity" />
        <activity android:name=".view.ShopActivity" />
        <activity android:name=".view.GameActivity"
            android:screenOrientation="portrait">
        <activity android:name=".view.GameActivity" />
        <activity android:name=".view.AdvActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert">
        </activity>


        <activity android:name=".view.exitButton"

            android:theme="@style/Theme.AppCompat.Dialog.Alert">
        </activity>
    </application>

</manifest>